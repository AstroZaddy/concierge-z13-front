---
import "../styles/global.css";
import { ParallaxStarfield } from "../components/ui/ParallaxStarfield.jsx";
import { ClientLayoutWrapper } from "../components/layout/ClientLayoutWrapper.jsx";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Z13 Astrology - True-Sky & Tropical Zodiac</title>
    <meta name="description" content="Classical (Tropical) and True-Sky (Sidereal) Zodiac, together in one place - powered by real NASA JPL data." />
    
    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    
    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- PWA Icons -->
    <link rel="icon" type="image/png" sizes="192x192" href="/z13-logo-192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/z13-logo-512.png" />
    
    <!-- Manifest (if present) -->
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Analytics -->
    <script defer src="https://analytics.conciergewebhost.ca/script.js" data-website-id="dad95d9c-8ed7-42e8-8a9e-b19e0fc3b466"></script>
  </head>
  <body class="bg-[#0a0a12] text-gray-200 antialiased">

    <ParallaxStarfield client:only="react" />

    <ClientLayoutWrapper client:load>
      <div class="pt-20">
        <slot />
      </div>
    </ClientLayoutWrapper>

  </body>
</html>